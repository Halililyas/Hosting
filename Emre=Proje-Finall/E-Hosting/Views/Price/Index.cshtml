@using Entity.Concreate;
@model List<Product>;

<section class="price_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Our Pricing
            </h2>
        </div>
        <div class="price_container ">
           @foreach (var item in Model)
            {
                
            
            <div class="box">
                <div class="detail-box">
                    <h2>$ <span>@item.UrunFiyat</span></h2>
                    <h6>
                        @item.UrunAdı
                    </h6>
                    <ul class="price_features">
                        <li>
                            @item.RamAlanı +GB Ram Alanı 
                        </li>
                        <li>
                            @item.HafızaAlanı + SSD Cloud Storage
                        </li>
                        <li>
                           @item.YedeklemeZamanı
                        </li>
                        <li>
                            @item.Koruması
                        </li>
                        <li>
                            @item.Erişim
                        </li>
                        <li>
                            24/7/365 Tech Support
                        </li>
                    </ul>
                </div>
                <div class="btn-box">
                    <a href="">
                        Satın Al 
                    </a>
                </div>

            </div>
            }
        </div>
    </div>
</section>

